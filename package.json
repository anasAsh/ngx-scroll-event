{
	"name": "ngx-scroll-event",
	"version": "1.0.7",
	"description": "An Angular 2+ directive to handle scroll events on an element.",
	"scripts": {
		"build": "ngc -p tsconfig.json",
		"lint": "tslint --type-check --project tsconfig.json src/**/*.ts",
		"test": "tsc && karma start",
		"prepublish": "npm run clean && npm run build",
		"postpublish": "npm run clean",
		"clean:root": "rimraf  ./*js ./*.js.map ./*.d.ts ./*.metadata.json",
		"clean:src": "rimraf ./src/*js ./src/*.js.map ./src/*.d.ts ./src/*.metadata.json",
		"clean:compiled": "rimraf ./compiled",
		"clean": "npm run clean:root && npm run clean:src && npm run clean:compiled",
		"tsc": "tsc"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/anasAsh/ng2-scroll-event"
	},
	"author": "anasAsh",
	"keywords": [
		"scroll",
		"directive",
		"event",
		"angular 2",
		"angular2",
		"Angular",
		"typescript"
	],
	"license": "MIT",
	"main": "./index.js",
	"dependencies": {},
	"peerDependencies": {
		"@angular/common": "^2.4.0",
		"@angular/compiler": "^2.4.5",
		"@angular/core": "^2.4.0",
		"@angular/platform-browser": "^2.4.5",
		"@angular/router": "^3.2.0",
		"rxjs": "^5.0.1",
		"zone.js": "^0.7.2"
	},
	"devDependencies": {
		"@angular/common": "^2.4.0",
		"@angular/compiler": "^2.4.5",
		"@angular/compiler-cli": "^2.4.5",
		"@angular/core": "^2.4.0",
		"@angular/platform-browser": "^2.4.5",
		"@angular/platform-server": "^2.4.5",
		"@types/es6-shim": "^0.31.32",
		"@types/jasmine": "^2.5.40",
		"@types/selenium-webdriver": "^2.53.39",
		"codelyzer": "^3.0.0-beta.0",
		"rimraf": "^2.6.1",
		"rxjs": "^5.0.1",
		"tslint": "^4.5.1",
		"typescript": "^2.0.2",
		"zone.js": "0.7.2"
	},
	"engines": {
		"node": ">=0.8.0"
	}
}
